<%- include("navbar.ejs")%>

  <div class="container">
    <div class="row">
      <div class="col-md-12 p-0">
        <h2 class="font-weight-bold p-4 text-center alert alert-success">Contact Us</h2>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12 pb-3">
        <h3 class="font-weight-bold p-2 border-bottom">Our Branches :</h3>
      </div>
    </div>
  </div>

  <div class="container bg-light mt-4 mb-4">
    <div class="row">
      <% for(var i=0;i<our_branches.length;i++){%>
        <div class="col-xl-6 col-lg-12 col-md-12 p-4 border-bottom border-right">
          <h4 class="text-danger font-weight-bold">
            <%=our_branches[i].shop_place%>
          </h4>
          &nbsp;
          <h6>
            <%=our_branches[i].shop_name%>
          </h6>
          <p>
            <%=our_branches[i].shop_address%>
          </p>
        </div>
        
          <div class="col-xl-6 col-lg-12 col-md-12 p-4 border-bottom">
            <h4 class="text-danger font-weight-bold">Contact :</h4>
            <br />
            <p>Call Us: <a href=""><%=our_branches[i].shop_mobile_no%></a></p>
            <p>Mail Us: <a href=""><%=our_branches[i].shop_email%></a></p>
          </div>
          <%}%>
    </div>
  </div>

  <!-- =============================================================== -->

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h3 class="font-weight-bold p-2 border-bottom">Contact Us</h3>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-12 border mt-4 p-4 mb-5 shadow bg-light">
        <form class="" action="/save_contact_us_user_side_form" method="post">
          <div class="form-row">
            <div class="col-md-12 mb-3">
              <label for="validationTooltip01">Enter Your Full Name Here..</label>
              <input type="text" class="form-control" name="user_name" required />
            </div>
          </div>
          <div class="form-row">
            <div class="col-xl-6 col-lg-12 col-md-12 mb-3">
              <label for="validationTooltip03">Enter Your Email Address</label>
              <input type="email" name="user_email" class="form-control" required />
            </div>
            <div class="col-xl-6 col-lg-12 col-md-12 mb-3">
              <label for="validationTooltip03">Enter Your Mobile</label>
              <input type="text" name="user_mobile" class="form-control" required />
            </div>
            <div class="col-xl-6 col-lg-12 col-md-12 mb-3">
              <label>Your State</label>
              <select class="custom-select" name="select_stat" required>
                <option selected value="Maharashtra">Maharshtra</option>
                <option value="Gujrat">Gujrat</option>
                <option value="Goa">Goa</option>
                <option value="UP">Uttarpradesh</option>
                <option value="Hariyana">Hariyana</option>
              </select>
            </div>
            <div class="col-xl-6 col-lg-12 col-md-12 mb-3">
              <label for="">Type Your Requirements Here..</label>
              <textarea class="form-control" rows="1" name="user_requirment"></textarea>
            </div>
          </div>
          <div class="text-center mt-4">
            <button class="btn btn-success font-weight-bold pl-5 pr-5" type="">
              Submit form
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <% for(var i=0;i<google_map_contact.length;i++){%>
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-3">
        <iframe
          src="<%=google_map_contact[i].google_map_link%>"
          width="100%" height="300" style="border: 0" allowfullscreen="" loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
    </div>
  </div>
  <%}%>

  <%- include("footer.ejs")%>