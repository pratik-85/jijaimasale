<%- include("../../navbar.ejs")%>
<style>
    .heading {
        background-image: linear-gradient(45deg, #44CE42 70%, #f34040 30%);
        padding-top: 5px;
        padding-bottom: 5px;
        padding-left: 5px;
        color: white;
    }
</style>
<form action="./update_products" enctype="multipart/form-data" method="post">
   <input type="hidden" name="our_products_id" class="form-control border-dark" value="<%=data[0].our_products_id%>">
    <div class="container-fluid p-5 bg-white">
        <div class="row">
            <div class="col-md-12">
                <h2 class="heading">Edit Our Product</h2>
            </div>
            <div class="col-md-4">
                Heading
                <input type="text"  name="heading1" class="form-control border-dark"  value="<%=data[0].heading1%>">
             </div>
            <div class="col-md-4">
                Img1
                <input type="file" name="img1" class="form-control border-dark"  value="<%=data[0].img1%>"> <br>
             </div>
             <div class="col-md-4">
                <img src="/images/<%=data[0].img1%>" width="200px" height="200px">
             </div>
            <div class="col-md-12 mt-5 text-center">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</form>
