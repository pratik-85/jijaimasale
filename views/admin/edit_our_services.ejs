<%- include("navbar.ejs")%>
<style>
    .heading {
        background-image: linear-gradient(45deg, #44CE42 70%, #f34040 30%);
        padding-top: 5px;
        padding-bottom: 5px;
        padding-left: 5px;
        color: white;
    }
</style>

<form action="/admin/update_our_services" enctype="multipart/form-data" method="post">
    <div class="container bg-white p-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="font-weight-bold text-dark heading">Edit Services</h1>
            </div>
            <input type="hidden" name="our_services_id" value="<%=edit_our_services[0].our_services_id%>">
            <div class="col-md-5">
                <label for="">Title</label>
                <input type="text" name="our_services_title" class="form-control border border-dark" value="<%=edit_our_services[0].our_services_title%>">
            </div>
            <div class="col-md-5">
                <label for="">Image</label>
                <input type="file" name="our_services_image" class="form-control border border-dark">
                <img src="/encoded_img/<%=edit_our_services[0].our_services_image%>" alt="" class="img-fluid w-100 h-50 mt-2">
            </div>
            <div class="col-md-2 text-center">
                <button class="btn btn-primary" style="margin-top: 30px;">Submit</button>
            </div>
        </div>
    </div>
</form>

<%- include("footer.ejs")%>