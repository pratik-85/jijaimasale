<%- include("navbar.ejs")%>

<div class="container mt-3">
    <div class="row">
      <div class="col-md-12 p-0">
        <h2 class="text-center font-weight-bold p-4 alert alert-success">
          Our Gallery
        </h2>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mb-5">
      <% for(var i=0;i<gallery.length;i++){%>
      <div class="col-xl-4 col-lg-6 col-md-12 border mt-4">
        <img
          src="/encoded_img/<%=gallery[i].gallary_image%>"
          class="w-100 img-fluid p-1 mt-3 border shadow"
        />
        <p class="font-weight-bold p-2 text-center mt-3 alert alert-success">
          <%=gallery[i].gallary_desc%>
        </p>
      </div>
      <%}%>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% for(var i=0;i<gallary_videos.length;i++){%>
      <div
        class="col-xl-6 col-lg-12 col-md-12 mt-4 alert alert-danger border-danger"
      >
        <div class="card">
          <p class="p-3 font-weight-bold">
            <%=gallary_videos[i].gallary_video_desc%>
          </p>
          <iframe
            width="100%"
            height="315"
            src="<%=gallary_videos[i].gallary_video_link%>"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
            referrerpolicy="strict-origin-when-cross-origin"
            allowfullscreen
          ></iframe>
        </div>
      </div>
      <%}%>
    </div>
  </div>

  <%- include("footer.ejs")%>