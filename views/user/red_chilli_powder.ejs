<%- include("navbar.ejs")%>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 p-0">
                <h2 class="alert alert-success font-weight-bold p-4 text-center">Red Chilli Masala</h2>
            </div>
        </div>
    </div>

    <% for(var i=0;i<red_chilli_products.length;i++){%>
    <section>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="mutih1 text-uppercase"><strong></strong></div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-lg-12">
                    <img src="/images/<%=red_chilli_products[i].banner_img%>" class="img-fluid" alt="">
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-lg-4">
                    <br><img src="/images/<%=red_chilli_products[i].img1%>" class="img-fluid" alt="">
                    <br><br><img src="/images/<%=red_chilli_products[i].img2%>" class="img-fluid" alt="">
                    <br><br>

                </div>
                <div class="col-lg-8">
                    <p>
                    <h3 class="color_red"><%=red_chilli_products[i].heading1%></h3>
                    <p class="font-family">
                        <b><%=red_chilli_products[i].description1%>
                        </b>
                    </p>
                    <h3 class="color_red"><%=red_chilli_products[i].heading2%></h3>
                    <% for(var i=0;i<description.length;i++){%>
                    <p class="font-weight-bold mt-3"><%=description[i].description%></p>
                    <%}%>
                    <% for(var i=0;i<red_chilli_products.length;i++){%>
                    <h3 class="color_red"><%=red_chilli_products[i].heading3%></h3>
                    <%}%>
                    <p style="font-size:16px"><b>
                            <ul>
                                <% for(var i=0;i<specificationdata.length;i++){%>
                                <li>
                                    <p class="font-family"><%=specificationdata[i].specification%></p>
                                </li>
                                <%}%>
                            </ul>
                        </b></p>

                    <% for(var i=0;i<red_chilli_products.length;i++){%>
                    <h3 class="color_red"><%=red_chilli_products[i].heading4%></h3>
                    <%}%>

                    <div class="d-flex">
                        <% for(var i=0;i<quantitydata.length;i++){%>
                            <span class="ml-4 font-weight-bold">
                                <%=quantitydata[i].quantity%>
                            </span>
                            <%}%>
                    </div>
                    <% for(var i=0;i<red_chilli_products.length;i++){%>
                    <h3 class="color_red"><%=red_chilli_products[i].heading5%></h3>
                    <%}%>
                    </p>
                </div>
            </div>
        </div>
    </section>
    <%}%>

    <% for(var i=0;i<red_chilli_products.length;i++){%>
    <div class="container mb-4">
        <div class="row">
            <div class="col-md-5 mt-2">
                <img src="/images/<%=red_chilli_products[i].img3%>" alt="First Image" class="img-fluid"
                    style="height: 300px;width: 100%;">
            </div>
            <div class="col-md-7 mt-2">
                <img src="/images/<%=red_chilli_products[i].img4%>" alt="Second Image" class="img-fluid"
                    style="height: 300px;width: 100%;">
            </div>
        </div>
    </div>
    <%}%>


