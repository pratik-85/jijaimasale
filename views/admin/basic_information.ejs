<%- include("navbar.ejs")%>
<style>
    .heading {
        background-image: linear-gradient(45deg, #44CE42 70%, #f34040 30%);
        padding-top: 5px;
        padding-bottom: 5px;
        padding-left: 5px;
        color: white;
    }
</style>

<form action="/admin/save_basic_information" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-5">
        <div class="row">
            <div class="col-md-12">
                <h2 class="font-weight-bold text-white heading">Add Basic Information</h2>
            </div>
            <div class="col-md-2">
                <label for="">Company Name</label>
                <input type="text" class="form-control border-dark" name="company_name" value="<%=basic_information.company_name%>">
            </div>
            <div class="col-md-2">
                <label for="">Email 1</label>
                <input type="email" class="form-control border-dark" name="email1" value="<%=basic_information.email1%>">
            </div>
            <div class="col-md-2">
                <label for="">Email 2</label>
                <input type="email" class="form-control border-dark" name="email2" value="<%=basic_information.email2%>">
            </div>
            <div class="col-md-2">
                <label for="">Email 3</label>
                <input type="email" class="form-control border-dark" name="email3" value="<%=basic_information.email3%>">
            </div>
            <div class="col-md-2">
                <label for="">Mobile 1</label>
                <input type="text" class="form-control border-dark" name="mobile1" value="<%=basic_information.mobile1%>">
            </div>
            <div class="col-md-2">
                <label for="">Mobile 2</label>
                <input type="text" class="form-control border-dark" name="mobile2" value="<%=basic_information.mobile2%>">
            </div>
            <div class="col-md-2">
                <label for="">Facebook Link</label>
                <input type="text" class="form-control border-dark" name="facebook_link" value="<%=basic_information.facebook_link%>">
            </div>
            <div class="col-md-2">
                <label for="">Instagram Link</label>
                <input type="text" class="form-control border-dark" name="instagram_link" value="<%=basic_information.instagram_link%>">
            </div>
            <div class="col-md-2">
                <label for="">Twitter Link</label>
                <input type="text" class="form-control border-dark" name="twitter_link" value="<%=basic_information.twitter_link%>">
            </div>
            <div class="col-md-2">
                <label for="">Youtube Link</label>
                <input type="text" class="form-control border-dark" name="youtube_link" value="<%=basic_information.youtube_link%>">
            </div>
            <div class="col-md-2">
                <label for="">Skype Link</label>
                <input type="text" class="form-control border-dark" name="skype_link" value="<%=basic_information.skype_link%>">
            </div>
            <div class="col-md-2">
                <label for="">Google Plus Link</label>
                <input type="text" class="form-control border-dark" name="google_plus_link" value="<%=basic_information.google_plus_link%>">
            </div>
            <div class="col-md-2">
                <label for="">Company Link</label>
                <input type="text" class="form-control border-dark" name="company_link" value="<%=basic_information.company_link%>">
            </div>
            <div class="col-md-5">
                <label for="">Description</label>
                <input type="text" class="form-control border-dark" name="description" value="<%=basic_information.description%>">
            </div>
            <div class="col-md-5">
                <label for="">Address</label>
                <input type="text" class="form-control border-dark" name="company_address" value="<%=basic_information.company_address%>">
            </div>
            <div class="col-md-12 mt-5 text-center">
                <button class="btn btn-primary">Update Basic Information</button>
            </div>
        </div>
    </div>
</form>



<%- include("footer.ejs")%>